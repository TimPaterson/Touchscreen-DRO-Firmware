<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Project [<!ENTITY Fonts SYSTEM "../Fonts/Fonts.xml">]>
<Project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.timpaterson.com/schemas/ScreenDesigner.xsd">
  &Fonts;
  <Set Name="BtnHeight">60</Set>
  <Set Name="BtnWidth" Value="60"/>
  <Set Name="KeySpace" Value="10"/>
  <Set Name="KeypadLeft" Value="584"/>
  <Set Name="BtnFontSize" Value="BtnHeight * 3 / 4" />
  <Font Name="BtnFont" FontSize="BtnFontSize" FontFamily="Arial"/>
  <Font Name="BtnSmallFont" FontSize="BtnFontSize * 3 / 4" />
  <Set Name="SmallTextHeight" Value="CalcSmall_Height"/>
  <Color Name="ScreenBackColor" Color="LightBlue" ColorDepth="Color16bpp"/>
  <Color Name="AxisForeColor" Color="Black" />
  <Color Name="AxisBackColor" Color="Yellow" />
  <Color Name="CalcBackColor" Color="White" />
  <Color Name="MemColorOdd" Color="0xD0C0D0" ColorDepth="Color16bpp"/>
  <Color Name="MemColorEven" Color="PaleGreen" ColorDepth="Color16bpp"/>
  <Color Name="BtnBackground" Color="0x606060"/>

  <!-- Components -->
  <Component Name="Key">
    <Rectangle Name="Button" Height="BtnHeight" Width="BtnWidth"
      RadiusX="8" RadiusY="8" StrokeThickness="2" Stroke="0" Fill="White">
      <TextBlock Name="Label" Font="BtnFont" Foreground="Black"/>
    </Rectangle>
    <HotSpot Name="KeySpot" Height="BtnHeight" Width="BtnWidth" />
  </Component>

  <Component Name="Memory">
    <Rectangle Name="MemRect" Height="BtnHeight" Width="150">
      <HotSpot Name="Mem" Group="Memory"/>
      <Rectangle Name="MemDisp" Top="BtnHeight / 4" Left="10" Height="BtnHeight / 2" Width="140"/>
    </Rectangle>
  </Component>

  <Component Name="Toggle">
    <Color Name="ToggleOn" Color="Yellow"/>
    <Rectangle Name="Button" Height="BtnHeight" Width="BtnWidth"
      RadiusX="8" RadiusY="8" StrokeThickness="0" Fill="BtnBackground">
      <TextBlock Name="Upper" FontSize="BtnFontSize / 2" Top="1" Foreground="DarkGray" FontFamily="Arial" Text="abs" />
      <Line X1="10" Y1="BtnHeight / 2" X2="BtnWidth - 10" Y2="BtnHeight / 2" Stroke="White" StrokeThickness="2" />
      <TextBlock Name="Lower" FontSize="BtnFontSize / 2" Top="33" Foreground="DarkGray" FontFamily="Arial" Text="inc" />
    </Rectangle>
  </Component>

  <Component Name="InchMetric">
    <Ref RefName="Toggle"/>
    <SetString RefName="Upper">Text="inch"</SetString>
    <SetString RefName="Lower">Text="mm"</SetString>
  </Component>

  <!-- Feeds & speeds images -->
  <Set Name="SpCellWidth" Value="90"/>
  <Set Name="SpCellHeight" Value="32"/>
  <Set Name="SpColSpace" Value="10"/>
  <Set Name="SpeedTextTop" Value="2"/>
  <Set Name="SpeedDisplayWidth" Value="SpCellWidth * 4 + SpColSpace + 1"/>
  <Set Name="SpeedDisplayHeight" Value="SpCellHeight * 3 + 1"/>
  <Component Name="SpeedDisplay">
    <Grid RowHeight="SpCellHeight" ColumnWidth="SpCellWidth">
      <Default>
        <Rectangle Name="Cell" Height="SpCellHeight + 1" Width="SpCellWidth + 1" Stroke="Black" StrokeThickness="1">
          <TextBlock Name="SpeedText" Font="CalcSmall"/>
        </Rectangle>
      </Default>
      <Row>
        <Column>
          <Set RefName="Cell">StrokeThickness = 0; Width = SpCellWidth * 2</Set>
          <Set>SpeedText.Text = Speed</Set>
          <HotSpot Name="ToolSfm" Group="ToolInfo" Height="SpCellHeight * 3" Width="SpCellWidth * 2"/>
        </Column>
        <Column Left="SpCellWidth + SpColSpace">
          <Set RefName="Cell">StrokeThickness = 0; Width = SpCellWidth * 2</Set>
          <Set>SpeedText.Text = Chip Load</Set>
          <HotSpot Name="ToolChipLoad" Group="ToolInfo" Height="SpCellHeight * 3" Width="SpCellWidth * 2"/>
        </Column>
      </Row>
      <Row>
        <Column>
          <Set RefName="SpeedText">Text = SFM; Name = SpeedTextSfm</Set>
        </Column>
        <Column>
          <Rectangle Area="Sfm" Left="15" Top="SpeedTextTop" Height="SmallTextHeight" Width="SpCellWidth - 16"/>
        </Column>
        <Column Left="SpColSpace">
          <Set RefName="SpeedText">Text = in/tooth; Name = SpeedTextFeed</Set>
        </Column>
        <Column>
          <Rectangle Area="ChipLoad" Left="8" Top="SpeedTextTop" Height="SmallTextHeight" Width="SpCellWidth - 9"/>
        </Column>
      </Row>
      <Row>
        <Column>
          <Set>SpeedText.Text = RPM</Set>
        </Column>
        <Column>
          <Rectangle Area="Rpm" Left="15" Top="SpeedTextTop" Height="SmallTextHeight" Width="SpCellWidth - 16"/>
        </Column>
        <Column Left="SpColSpace">
          <Set RefName="SpeedText">Text = in/min; Name = SpeedTextLoad</Set>
        </Column>
        <Column>
          <Rectangle Area="FeedRate" Left="15" Top="SpeedTextTop" Height="SmallTextHeight" Width="SpCellWidth - 16"/>
        </Column>
      </Row>
    </Grid>
  </Component>

  <!-- Main Screen -->
  <Canvas Name="MainScreen" Width="1024" Height="600" ColorDepth="Color16bpp" Fill="ScreenBackColor">

    <!-- Axis displays -->
    <Set Name="DispHt" Value="DigitDisplay_Height"/>
    <Set Name="DispWd" Value="410" />
    <Set Name="DigHt" Value="96"/>
    <Set Name="LabHt" Value="72"/>
    <Set Name="Vspace" Value="25"/>
    <Set Name="LabTop" Value="(DispHt - DigHt) / 2"/>

    <Grid Top="Vspace/2" RowHeight="DispHt + Vspace" ColumnWidth="0">
      <Default>
        <Rectangle Name="AxisDisplay" Group="Axis" Height="DispHt" Width="DispWd" Fill="AxisBackColor">
        </Rectangle>
        <Rectangle Name="AxisButton" Group="AxisButton" Top="LabTop" Left="DispWd+25" Height="DigHt" Width="85" RadiusX="8" RadiusY="8"
          StrokeThickness="5" Stroke="0" Fill="White">
          <TextBlock Name="AxisLabel" FontSize="LabHt" Foreground="Black" FontFamily="Arial" Left="13" />
          <TextBlock Name="AxisLabel" FontSize="LabHt*2/5" Foreground="Black" FontFamily="Arial"
            Text="0" Top="47" Left="59"/>
        </Rectangle>
     </Default>
      <Row>
        <Column>
          <Set>AxisLabel.Text = X</Set>
          <Set>AxisButton.HotSpot = Xsensor</Set>
          <Set RefName="AxisDisplay">Area = Xdisplay; HotSpot = Xsensor</Set>
        </Column>
      </Row>
      <Row>
        <Column>
          <Set>AxisLabel.Text = Y</Set>
          <Set>AxisButton.HotSpot = Ysensor</Set>
          <Set RefName="AxisDisplay">Area = Ydisplay; HotSpot = Ysensor</Set>
        </Column>
      </Row>
      <Row>
        <Column>
          <Set>AxisLabel.Text = Z</Set>
          <Set>AxisButton.HotSpot = Zsensor</Set>
          <Set RefName="AxisDisplay">Area = Zdisplay; HotSpot = Zsensor</Set>
        </Column>
      </Row>
    </Grid>

    <!-- Settings controls -->
    <Set Name="LgBtnWidth" Value="BtnWidth * 2"/>
    <Set Name="SettingLeft" Value="1024 - LgBtnWidth - KeySpace"/>
    <Color Name="SetBtnText" Color="ToggleOn"/>
    <Rectangle HotSpot="Settings" Top="KeySpace" Left="SettingLeft" Height="BtnHeight"
      Width="LgBtnWidth" RadiusX="8" RadiusY="8" Fill="BtnBackground">
      <TextBlock FontSize="BtnHeight * 2 / 5" FontFamily="Arial" Foreground="SetBtnText">Settings</TextBlock>
    </Rectangle>
    <Rectangle Top="BtnHeight + KeySpace * 2" Left="SettingLeft" Height="BtnHeight"
      Width="LgBtnWidth" RadiusX="8" RadiusY="8" Fill="BtnBackground">
      <TextBlock Top="5" FontSize="BtnHeight / 3" FontFamily="Arial" Foreground="SetBtnText">Brightness</TextBlock>
      <Rectangle HotSpot="BrightDown" Width="BtnWidth" Height="BtnHeight">
        <TextBlock Top="15" FontSize="BtnFontSize" FontFamily="Arial" Foreground="SetBtnText">−</TextBlock>
      </Rectangle>
      <Rectangle HotSpot="BrightUp" Left="BtnWidth" Width="BtnWidth" Height="BtnHeight">
        <TextBlock Top="15" FontSize="BtnFontSize" FontFamily="Arial" Foreground="SetBtnText">+</TextBlock>
      </Rectangle>
    </Rectangle>

    <!-- Caculator displays -->
    <Set Name="KeypadWidth" Value="KeySpace + (BtnWidth + KeySpace) * 4"/>
    <Set Name="KeypadRight" Value ="KeypadLeft + KeypadWidth"/>
    <Set Name="KeypadHeight" Value="KeySpace + (BtnHeight + KeySpace) * 5"/>
    <Set Name="CalcTextHeight" Value="BtnHeight"/>
    <Set Name="Undo3Top" Value="Vspace"/>
    <Set Name="Undo2Top" Value="Undo3Top + SmallTextHeight"/>
    <Set Name="Undo1Top" Value="Undo2Top + SmallTextHeight"/>
    <Set Name="CalcDispTop" Value="Undo1Top + SmallTextHeight + KeySpace"/>
    <Set Name="CalcTextTop" Value="CalcDispTop + CalcTextHeight + KeySpace"/>
    <Set Name="KeypadTop" Value="CalcTextTop + SmallTextHeight + KeySpace"/>
    <Set Name="KeypadBottom" Value="KeypadTop + KeypadHeight" />
    <Rectangle Location="Undo3" Left="KeypadLeft" Top="Undo3Top" Width="KeypadWidth" Height="SmallTextHeight" Fill="CalcBackColor">
    </Rectangle>
    <Rectangle Location="Undo2" Left="KeypadLeft" Top="Undo2Top" Width="KeypadWidth" Height="SmallTextHeight" Fill="CalcBackColor">
    </Rectangle>
    <Rectangle Location="Undo1" Left="KeypadLeft" Top="Undo1Top" Width="KeypadWidth" Height="SmallTextHeight" Fill="CalcBackColor">
    </Rectangle>
    <HotSpot Name="Undo" Area="Undo" Left="KeypadLeft" Top="Vspace/2" Height="SmallTextHeight * 3" Width="KeypadWidth"/>
    <Rectangle Area="CalcDisplay" Left="KeypadLeft" Top="CalcDispTop" Width="KeypadWidth" Height="CalcTextHeight" Fill="CalcBackColor">
      <HotSpot Name="CalcDisplay"/>
    </Rectangle>
    <Rectangle Area="CalcText" Left="KeypadLeft" Top="CalcTextTop" Width="KeypadWidth" Height="SmallTextHeight" Fill="CalcBackColor">
    </Rectangle>
    <TextBlock Top="KeypadTop - 25" Left="KeypadLeft + 310" Font="CalcSmall">Memories</TextBlock>

    <!-- Toggle button locations (images overwritten) -->
    <Ref RefName="InchMetric" Left="KeypadRight + KeySpace" Top="KeypadBottom - BtnHeight - KeySpace">
      <Set>Button.Area = "InchMetric"; Button.HotSpot = "InchMetric"</Set>
    </Ref>
    <Ref RefName="Toggle" Left="KeypadRight + BtnWidth + 2 * KeySpace" Top="KeypadBottom - BtnHeight - KeySpace">
      <Set>Button.Area = "AbsInc"; Button.HotSpot = "AbsInc"</Set>
    </Ref>

    <!-- Keypad -->
    <Rectangle Top="KeypadTop" Left="KeypadLeft" Height="KeypadHeight" Width="KeypadWidth" Fill="Black">
      <Grid Name="KeyPad" Top="KeySpace" Left="KeySpace" RowHeight="BtnHeight+KeySpace" ColumnWidth="BtnWidth+KeySpace">
        <Default>
          <Ref RefName="Key" />
          <Set>KeySpot.Group = Digit</Set>
        </Default>
        <Row>
          <Column>
            <Set RefName="Label">Text = ⌫; Font = BtnSmallFont</Set>
            <Set RefName="KeySpot">Group = "Edit"; Name = Key_backSpace</Set>
          </Column>
          <Column>
            <Set RefName="Label">Text = CE; Font =BtnSmallFont</Set>
            <Set RefName="KeySpot">Group = "Edit"; Name = Key_clear</Set>
          </Column>
          <Column>
            <Set RefName="Label">Text = π</Set>
            <Set RefName="KeySpot">Group = "Edit"; Name = Key_pi</Set>
          </Column>
          <Column>
            <Set>Label.Text = +</Set>
            <Set RefName="KeySpot">Group = "Operator"; Name = Key_plus</Set>
          </Column>
          <ColumnNoDefault>
            <Ref RefName="Memory"/>
            <Set>Mem.Name = Mem1</Set>
            <Set RefName="MemRect">Fill = MemColorOdd</Set>
            <Set>MemDisp.Area = Mem1</Set>
          </ColumnNoDefault>
        </Row>
        <Row>
          <Column>
            <Set RefName="Label">Text = 7</Set>
            <Set RefName="KeySpot">Name = Key_7</Set>
          </Column>
          <Column>
            <Set>Label.Text = 8</Set>
            <Set RefName="KeySpot">Name = Key_8</Set>
          </Column>
          <Column>
            <Set>Label.Text = 9</Set>
            <Set RefName="KeySpot">Name = Key_9</Set>
          </Column>
          <Column>
            <Set>Label.Text = −</Set>
            <Set RefName="KeySpot">Group = Operator; Name = Key_minus</Set>
          </Column>
          <ColumnNoDefault>
            <Ref RefName="Memory"/>
            <Set>Mem.Name = Mem2</Set>
            <Set RefName="MemRect">Fill = MemColorEven</Set>
            <Set>MemDisp.Area = Mem2</Set>
          </ColumnNoDefault>
        </Row>
        <Row>
          <Column>
            <Set>Label.Text = 4</Set>
            <Set RefName="KeySpot">Name = Key_4</Set>
          </Column>
          <Column>
            <Set>Label.Text = 5</Set>
            <Set RefName="KeySpot">Name = Key_5</Set>
          </Column>
          <Column>
            <Set>Label.Text = 6</Set>
            <Set RefName="KeySpot">Name = Key_6</Set>
          </Column>
          <Column>
            <Set>Label.Text = ×</Set>
            <Set RefName="KeySpot">Group = "Operator"; Name = Key_mult</Set>
          </Column>
          <ColumnNoDefault>
            <Ref RefName="Memory"/>
            <Set>Mem.Name = Mem3</Set>
            <Set RefName="MemRect">Fill = MemColorOdd</Set>
            <Set>MemDisp.Area = Mem3</Set>
          </ColumnNoDefault>
        </Row>
        <Row>
          <Column>
            <Set>Label.Text = 1</Set>
            <Set RefName="KeySpot">Name = Key_1</Set>
          </Column>
          <Column>
            <Set>Label.Text = 2</Set>
            <Set RefName="KeySpot">Name = Key_2</Set>
          </Column>
          <Column>
            <Set>Label.Text = 3</Set>
            <Set RefName="KeySpot">Name = Key_3</Set>
          </Column>
          <Column>
            <Set>Label.Text = ÷</Set>
            <Set RefName="KeySpot">Group = "Operator"; Name = Key_divide</Set>
          </Column>
          <ColumnNoDefault>
            <Ref RefName="Memory"/>
            <Set>Mem.Name = Mem4</Set>
            <Set RefName="MemRect">Fill = MemColorEven</Set>
            <Set>MemDisp.Area = Mem4</Set>
          </ColumnNoDefault>
        </Row>
        <Row>
          <Column>
            <Set RefName="Label">Text = ±</Set>
            <Set RefName="KeySpot">Name = Key_sign</Set>
          </Column>
          <Column>
            <Set>Label.Text = 0</Set>
            <Set RefName="KeySpot">Name = Key_0</Set>
          </Column>
          <Column>
            <Set>Label.Text = ∙</Set>
            <Set>KeySpot.Name = Key_decimal</Set>
          </Column>
          <Column>
            <Set>Label.Text = =</Set>
            <Set RefName="KeySpot">Group = "Operator"; Name = Key_equal</Set>
          </Column>
        </Row>
      </Grid>
    </Rectangle>

    <!-- Tool displays -->
    <Set Name="ToolTop" Value="3 * DispHt + 5 * Vspace / 2 + KeySpace"/>
    <Set Name="CellWidth" Value="70"/>
    <Set Name="CellHeight" Value="SmallTextHeight + 2"/>
    <Set Name="DescCellWidth" Value="KeypadLeft - CellWidth * 4 - KeySpace * 3 - BtnWidth"/>
    <Set Name="ToolTextTop" Value="2"/>
    <Set Name="LengthAdj" Value="15"/>
    <Grid Left="KeySpace" Top="ToolTop" RowHeight="CellHeight" ColumnWidth="CellWidth">
      <Default>
        <Rectangle Name="Cell" Height="CellHeight + 1" Width="CellWidth + 1" Stroke="Black" StrokeThickness="1">
          <TextBlock Name="CellText" Font="CalcSmall"/>
        </Rectangle>
      </Default>
      <Row>
        <Column>
          <Set>CellText.Text = Tool</Set>
          <HotSpot Name="ToolNumber" Group="ToolInfo" Height="CellHeight * 2" Width="CellWidth"/>
        </Column>
        <Column>
          <Set>CellText.Text = Dia.</Set>
          <HotSpot Name="ToolDiameter" Group="ToolInfo" Height="CellHeight * 2" Width="CellWidth"/>
        </Column>
        <Column>
          <Set>CellText.Text = Flut.</Set>
          <Set>Cell.Width = CellWidth + 1 - LengthAdj</Set>
          <HotSpot Name="ToolFlutes" Group="ToolInfo" Height="CellHeight * 2" Width="CellWidth - LengthAdj"/>
        </Column>
        <Column>
          <Set>CellText.Text = Length</Set>
          <Set RefName="Cell">Left = -LengthAdj; Width = CellWidth + 1 + LengthAdj</Set>
          <HotSpot Name="ToolLength" Group="ToolInfo" Left="-LengthAdj" Height="CellHeight * 2" Width="CellWidth + LengthAdj"/>
        </Column>
        <Column>
          <Set>Cell.Width = DescCellWidth</Set>
          <Set>CellText.Text = Description</Set>
        </Column>
      </Row>
      <Row>
        <Column>
          <Rectangle Area="ToolNumber" Top="ToolTextTop" Left="12" Height="SmallTextHeight" Width="CellWidth - 13"/>
        </Column>
        <Column>
          <Rectangle Area="ToolDiameter" Top="ToolTextTop" Left="5" Height="SmallTextHeight" Width="CellWidth - 6"/>
        </Column>
        <Column>
          <Set>Cell.Width = CellWidth + 1 - LengthAdj</Set>
          <Rectangle Area="ToolFlutes" Top="ToolTextTop" Left="9" Height="SmallTextHeight" Width="CellWidth - LengthAdj - 10"/>
        </Column>
        <Column>
          <Set RefName="Cell">Left = -LengthAdj; Width = CellWidth + 1 + LengthAdj</Set>
          <Rectangle Area="ToolLength" Top="ToolTextTop" Left="6 - LengthAdj" Height="SmallTextHeight" Width="CellWidth + LengthAdj - 7"/>
        </Column>
        <Column>
          <Rectangle Area="ToolDesc" Top="ToolTextTop" Left="5" Height="SmallTextHeight" Width="DescCellWidth - 6"/>
          <Set>Cell.Width = DescCellWidth</Set>
        </Column>
      </Row>
    </Grid>
    <!-- Tool select button -->
    <Ref RefName="Key" Left="KeySpace * 2 + CellWidth * 4 + DescCellWidth" Top="ToolTop">
      <Set>KeySpot.Name = ToolMenu</Set>
      <Set RefName="Button">StrokeThickness = 0; Fill = BtnBackground</Set>
      <Set RefName="Label">Foreground = ToggleOn; Text = "..."</Set>
    </Ref>
    <!-- Tool diagram -->
    <Set Name="DiagramTop" Value="ToolTop + 2 * CellHeight + KeySpace"/>
    <Set Name="DiagramHeight" Value="BtnHeight * 2"/>
    <Set Name="ToolDia" Value="BtnWidth / 2"/>
    <Set Name="ToolImageRadius" Value="ToolDia / 2" ShowValue=""/>
    <Color Name="ToolColor" Color="0xC00000" ColorDepth="Color16bpp"/>
    <Color Name="NoToolColor" Color="LightSkyBlue" ColorDepth="Color16bpp"/>
    <Rectangle Top="DiagramTop" Left="KeySpace" Width="DescCellWidth" Height="DiagramHeight">
      <Rectangle HotSpot="ToolLeft" Group="ToolSide" Top="DiagramHeight / 4" Width="BtnWidth" Height="BtnHeight"/>
      <Rectangle HotSpot="ToolBack" Group="ToolSide" Top="0" Width="BtnWidth" Left="BtnWidth" Height="BtnHeight"/>
      <Rectangle HotSpot="ToolFront" Group="ToolSide" Top="DiagramHeight / 2" Left="BtnWidth" Width="BtnWidth" Height="BtnHeight"/>
      <Rectangle HotSpot="ToolRight" Group="ToolSide" Top="DiagramHeight / 4" Left="BtnWidth * 2" Width="BtnWidth" Height="BtnHeight"/>
      <Ellipse Location="ToolLeft" Top="(DiagramHeight - ToolDia) / 2" Height="ToolDia" Width="ToolDia" Fill="NoToolColor"/>
      <Ellipse Location="ToolRight" Top="(DiagramHeight - ToolDia) / 2" Left="BtnWidth * 5 / 2" Height="ToolDia" Width="ToolDia" Fill="NoToolColor"/>
      <Ellipse Location="ToolBack" Top="0" Left="BtnWidth * 3 / 2 - ToolDia / 2" Height="ToolDia" Width="ToolDia" Fill="NoToolColor"/>
      <Ellipse Location="ToolFront" Top="DiagramHeight * 3 / 4" Left="BtnWidth * 3 / 2 - ToolDia / 2" Height="ToolDia" Width="ToolDia" Fill="NoToolColor"/>
      <Rectangle Top="DiagramHeight / 4" Left="BtnWidth / 2" Width="BtnWidth * 2" Height="BtnHeight" Fill="DarkSlateGray"/>
    </Rectangle>
    <!-- Tool feeds & speeds -->
    <Rectangle Area="SpeedDisplay" Top="DiagramTop" Left="BtnWidth * 3 + KeySpace * 2" Height="SpeedDisplayHeight" Width="SpeedDisplayWidth">
      <Ref RefName="SpeedDisplay"/>
    </Rectangle>
  </Canvas>

  <!-- Settings Screens (PIP) -->

  <Color Name="SettingBackColor" Color="Black" ColorDepth="Color8bpp"/>
  <Color Name="SettingForeColor" Color="White" ColorDepth="Color8bpp"/>
  <Set Name="SettingsWidth" Value="(KeypadLeft - KeySpace + 3) / 4 * 4"/> <!-- round up to multiple of 4 -->
  <Font Name="SettingsLabelFont" FontFamily="Arial" FontSize ="20"/>
  <Set Name="CheckboxSize" Value="32"/>
  <Color Name="CheckForeground" Color="SettingForeColor"/>
  <Color Name="CheckBackground" Color="SettingBackColor"/>

  <Component Name="UncheckedBox">
    <Rectangle Height="CheckboxSize" Width="CheckboxSize" StrokeThickness="3" Stroke="CheckForeground" Fill="CheckBackground">
    </Rectangle>
  </Component>

  <Component Name="CheckedBox">
    <Rectangle Height="CheckboxSize" Width="CheckboxSize" StrokeThickness="3" Stroke="CheckForeground" Fill="CheckBackground">
      <Line X1="0" Y1="0" X2="CheckboxSize" Y2="CheckboxSize" StrokeThickness="4" Stroke="CheckForeground"/>
      <Line X1="0" Y1="CheckboxSize" X2="CheckboxSize" Y2="0" StrokeThickness="4" Stroke="CheckForeground"/>
    </Rectangle>
  </Component>

  <!-- Main Settings Screen (PIP) -->
  <Canvas Name="SettingsScreen" Width="SettingsWidth" Height="600" Fill="SettingBackColor" ColorDepth="Color8bpp">
    <Set Name="AxisLabelWidth" Value="54"/>
    <Font Name="AxisLabelFont" FontFamily="Arial" FontSize="48"/>
    <Set Name="AxisSettingWidth" Value="120"/>
    <Set Name="AxisSettingHeight" Value="BtnHeight + 1"/>
    <Set Name="ColAdjust" Value="AxisLabelWidth - AxisSettingWidth"/>
    <Set Name="SensorTextLeft" Value="50"/>
    <Set Name="CorrectionTextLeft" Value="5"/>
    <Grid Top="KeySpace" Left="KeySpace" RowHeight="BtnHeight" ColumnWidth="AxisSettingWidth - 1">
      <Row>
        <Column></Column>
        <Column Left="ColAdjust">
          <Rectangle Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <TextBlock Name="AxisLabel" Font="SettingsLabelFont" Text="Sensor&#xA;Resolution" Foreground="SettingForeColor"/>
          </Rectangle>
        </Column>
        <Column>
          <Rectangle Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <TextBlock Name="AxisLabel" Font="SettingsLabelFont" Text="Invert&#xA;Direction" Foreground="SettingForeColor"/>
          </Rectangle>
        </Column>
        <Column>
          <Rectangle Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <TextBlock Name="AxisLabel" Font="SettingsLabelFont" Text="Linear&#xA;Correction" Foreground="SettingForeColor"/>
          </Rectangle>
        </Column>
      </Row>
      <Row>
        <Column>
          <Rectangle Height="AxisSettingHeight" Width="AxisLabelWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <TextBlock Name="AxisLabel" Font="AxisLabelFont" Text="X" Foreground="SettingForeColor"/>
          </Rectangle>
        </Column>
        <Column Left="ColAdjust">
          <Rectangle HotSpot="Xsensor" Group="Resolution" Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <Rectangle Area="Xresolution" Top="10" Left="SensorTextLeft" Height="SettingsFont_Height" Width="AxisSettingWidth - SensorTextLeft - 1"/>
          </Rectangle>
        </Column>
        <Column>
          <Rectangle HotSpot="Xsensor" Group="Invert" Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <Rectangle Area="Xinvert" Top="(BtnHeight - CheckboxSize) / 2" Left="(AxisSettingWidth - CheckboxSize) / 2" Height="CheckboxSize" Width="CheckboxSize"/>
          </Rectangle>
        </Column>
        <Column>
          <Rectangle HotSpot="Xsensor" Group="Correction" Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <Rectangle Area="Xcorrection" Top="10" Left="CorrectionTextLeft" Height="SettingsFont_Height" Width="AxisSettingWidth - CorrectionTextLeft - 1"/>
          </Rectangle>
        </Column>
      </Row>
      <Row>
        <Column>
          <Rectangle Height="AxisSettingHeight" Width="AxisLabelWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <TextBlock Name="AxisLabel" Font="AxisLabelFont" Text="Y" Foreground="SettingForeColor"/>
          </Rectangle>
        </Column>
        <Column Left="ColAdjust">
          <Rectangle HotSpot="Ysensor" Group="Resolution" Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <Rectangle Area="Yresolution" Top="10" Left="SensorTextLeft" Height="SettingsFont_Height" Width="AxisSettingWidth - SensorTextLeft - 1"/>
          </Rectangle>
        </Column>
        <Column>
          <Rectangle HotSpot="Ysensor" Group="Invert" Height="AxisSettingHeight" Width="AxisSettingWidth" Stroke="SettingForeColor" StrokeThickness="1">
            <Rectangle Area="Yinvert" Top="(BtnHeight - CheckboxSize) / 2" Left="(AxisSettingWidth - CheckboxSize) / 2" Height="CheckboxSize" Width="CheckboxSize"/>
          </Rectangle>
        </Column>
        <Column>
